{
  "extends": "@sapphire/ts-config",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "#lib/*": ["lib/*"]
    },
    "target": "ES2020",
    "lib": [
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.Intl",
      "ESNext.Symbol",
      "ESNext.BigInt"
    ],
    "experimentalDecorators": true,
    "importHelpers": true,
    "incremental": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "skipLibCheck": true
  },
  "outDir": "../dist",
  "rootDir": "./src",
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}
